<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
<script>
    // 아래 화살표를 눌렀을 때 스크롤 되는 함수
    function scrollToSection(selector) {
        const section = document.querySelector(selector);
        section.scrollIntoView({behavior: 'smooth'});
    }

    // 클릭하면 이미지 위 아래 순서 바꾸는 함수
    function swapImageOrder(imageNo) {
        const topImage = document.getElementsByClassName('top')[imageNo];
        const bottomImage = document.getElementsByClassName('bottom')[imageNo];

        // top 클래스 제거, 추가
        topImage.classList.remove('top');
        bottomImage.classList.add('top');

        // bottom 클래스 제거, 추가
        topImage.classList.add('bottom');
        bottomImage.classList.remove('bottom');
    }

    const menuElement = document.getElementById("nav-menu");
    const removeDiv = document.getElementById("remove-menu");
    const menuIcon = document.getElementById("menu-icon-image");
    let isShowing = false;

    function toggleMenu() {
        menuElement.classList.toggle("showing");
        removeDiv.classList.toggle("showing");
        isShowing = !isShowing;
        if (isShowing) menuIcon.src = "/images/cancel.png";
        else menuIcon.src = "/images/menuiconimage.png";

        console.log(menuIcon);
    }
</script>
